@model MovieInformation.Services.ApiModels.Responses.MoviePopularResponse

<h1>Top Population Movies</h1>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Rating</th>
                    <th>Movie</th>
                    <th>Image</th>
                    @*<th style="width:500px">Descriptions</th>*@
                    <th>Date Release</th>
                    <th>Vote Numbers</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>@item.VoteAverage</td>
                        <td>@item.Title</td>
                        <td><img src="https://image.tmdb.org/t/p/original/@(item.PosterPath)" style="width: 100px; height: auto" /></td>
                        @*<td>@item.Overview</td>*@
                        <td>@item.ReleaseDate</td>
                        <td>@item.VoteCount</td>
                        <td>@Html.ActionLink("Detail","Detail","Movies",new {movieId=item.Id.ToString() }) </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Rating</th>
                    <th>Movie</th>
                    <th>Image</th>
                    @*<th style="width:500px">Descriptions</th>*@
                    <th>Date Release</th>
                    <th>Vote Numbers</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script>
    $('#demoGrid').dataTable({        
    });
</script>  