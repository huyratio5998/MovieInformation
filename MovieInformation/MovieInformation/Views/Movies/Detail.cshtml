@model MovieInformation.Services.ApiModels.Responses.MovieDetailResponse;

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="https://image.tmdb.org/t/p/w500/@(Model.BackdropPath)" />            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteAverage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteAverage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Overview)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Overview)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Popularity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Popularity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionCompanies)
        </dt>        
        <dd class="col-sm-10">
           @foreach (var item in  @Model.ProductionCompanies.Select(x => x.Name))
           {
               <p>@item</p>
           }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Revenue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Revenue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteAverage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteAverage)
        </dd>
    </dl>
</div>
<div>    
    <a asp-action="Index">Back to List</a>
</div>
