@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        @{
            var picture = String.IsNullOrEmpty(Model.Input.Picture) ? "/images/NoImage.png" : Model.Input.Picture;
        }
        <img src="@picture" alt="Avatar" class="img-rounded img-thumbnail" style="height:160px;" />
        <label><b>Vip Expire Date - Remains: </b><span style="color:forestgreen">@ViewData["CountTimeExpire"] (days)</span></label>
        @if(!string.IsNullOrEmpty(Model.ExpireDate)){
        <p style="color:red;font-size:large">Expire At: @Model.ExpireDate</p>
        }
        <form id="profile-form" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />

                <label>Nick Name</label>
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Birthday"></label>
                <input asp-for="Input.Birthday" class="form-control" />
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.Gender"></label>
                <input asp-for="Input.Gender" class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>*@
            <button id="update-profile-button" type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}